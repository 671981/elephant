<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>

<div class="container">
    <div class="row">
    <%= render @products %>
</div>
</div>  

<br>

<%= form_tag("/products", method: "get") do %>
  <%= label_tag(:q, "Search for:") %>
  <%= text_field_tag(:q) %>
  <%= submit_tag("Search") %>
<% end %>

<%= link_to 'New Product', new_product_path %>